@model BookStore.Models.BookOwnerViewModel

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .container {
            display: flex;
            border: 2px solid #000;
            padding: 10px;
            margin: 20px 0;
        }

        .box {
            flex: 1;
            border: 2px solid #ccc;
            margin: 15px;
            padding: 25px;
        }

        .container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 10px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="box">
            <div class="row" style="background-color: #0079c8; text-align: center; color: white">
                <h2> Owner and Books</h2>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <center>
                        <table class="table table-responsive" style="width:200px;margin-top:15px">
                            <tr>
                                <th style="width: 60px; background-color: #0079c8; color: white">
                                    Books Owned by Adult
                                </th>
                            </tr>
                            @if (Model.Adults == null|| Model.Adults.Count == 0)
                            {
                                <tr>
                                    <td>
                                        No Books Available
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var adult in Model.Adults)
                                {
                                    <tr>
                                        <td>
                                            @foreach (var book in adult.Books)
                                            {
                                                @book.Name

                                            }

                                        </td>
                                    </tr>
                                }
                            }

                        </table>
                    </center>
                </div>
                <div class="col-sm-4">
                    <center>
                        <table class="table table-responsive" style="width:200px; margin-top:15px">
                            <tr>
                                <th style="width: 60px; background-color: #0079c8; color:white">
                                    Books Owned by Child
                                </th>

                            </tr>
                            @if (Model.Children == null || Model.Children.Count == 0)
                            {

                                <tr>
                                    <td>
                                        No Books Available
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var child in Model.Children)
                                {
                                    <tr>
                                        <td>

                                            @foreach (var book in child.Books)
                                            {
                                                @book.Name

                                            }

                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </center>
                </div>
            </div>
            <div class="row">
                &nbsp;
            </div>
            <div class="row">
                &nbsp; &nbsp; &nbsp; @Html.ActionLink("Hardcoveronly", "HardCoverBooks")  &nbsp; &nbsp;
                <input type="button" class="btn btn-info" style="background-color: #0079c8" value="GetALLBook" onclick="location.href='@Url.Action("GetAllBooks", "Book")'" />

            </div>


        </div>
    </div>
</body>
</html>

